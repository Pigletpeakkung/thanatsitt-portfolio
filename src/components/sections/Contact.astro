---
// üìß Contact Section - The Alchemical Connection (Enhanced)
import Button from '@ui/Button.astro';
---

<section id="contact" class="relative py-20 overflow-hidden">
  <!-- üåå Subtle Background Pattern (works with Stars) -->
  <div class="absolute inset-0 opacity-20 pointer-events-none">
    <div class="absolute inset-0 bg-gradient-to-br from-flow-50/30 via-transparent to-mirror-50/30 dark:from-flow-900/20 dark:via-transparent dark:to-mirror-900/20"></div>
    <!-- ‚ú® Floating Connection Symbols -->
    <div class="absolute top-20 left-20 w-12 h-12 border-2 border-flow-300 dark:border-flow-700 rounded-full opacity-30 animate-pulse"></div>
    <div class="absolute bottom-32 right-16 w-8 h-8 bg-mirror-300 dark:bg-mirror-700 rotate-45 opacity-25 animate-float"></div>
    <div class="absolute top-1/2 left-10 w-6 h-6 border border-alchemy-300 dark:border-alchemy-700 opacity-20"></div>
    <div class="absolute top-40 right-1/4 w-4 h-4 bg-sage-300 dark:bg-sage-700 rounded-full opacity-30 animate-pulse" style="animation-delay: 1s;"></div>
  </div>

  <div class="container-lg relative z-10">
    <!-- üéØ Enhanced Section Header -->
    <div class="text-center mb-20" id="contact-header">
      <div class="inline-block mb-6">
        <div class="glass-flow px-6 py-3 rounded-full mb-4">
          <span class="text-sm font-semibold text-flow-600 dark:text-flow-400 tracking-wider uppercase">
            üåê Sacred Connection
          </span>
        </div>
      </div>
      
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-heading font-bold mb-6">
        <span class="text-gradient-flow">The Connection</span> 
        <span class="text-luna-800 dark:text-luna-200">Awaits</span>
      </h2>
      
      <p class="text-xl md:text-2xl text-luna-600 dark:text-luna-300 max-w-3xl mx-auto leading-relaxed">
        Let's weave our stories together. Every collaboration is a 
        <em class="text-alchemy-600 dark:text-alchemy-400">ritual of co-creation</em>, 
        a chance to manifest something meaningful.
      </p>
    </div>
    
    <!-- üé≠ Enhanced Content Grid -->
    <div class="grid lg:grid-cols-2 gap-16" id="contact-content">
      <!-- üìù Enhanced Contact Information -->
      <div class="space-y-8" id="contact-info">
        <div class="glass-flow p-8 rounded-3xl">
          <h3 class="text-2xl md:text-3xl font-heading font-semibold mb-6 text-flow-800 dark:text-flow-200">
            <span class="text-gradient-flow">Begin Our</span> Dialogue
          </h3>
          <p class="text-luna-600 dark:text-luna-300 mb-8 text-lg leading-relaxed">
            Share your vision, challenges, or simply say hello. 
            I respond to every message with <strong class="text-flow-600 dark:text-flow-400">intention and care</strong>.
          </p>
          
          <!-- üåü Response Time Indicator -->
          <div class="glass-alchemy p-4 rounded-2xl mb-8">
            <div class="flex items-center gap-3">
              <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
              <span class="text-sm font-medium text-alchemy-700 dark:text-alchemy-300">
                Usually responds within 24 hours
              </span>
            </div>
          </div>
        </div>
        
        <!-- üìã Enhanced Contact Methods -->
        <div class="space-y-6" id="contact-methods">
          <!-- üìß Email -->
          <div class="contact-card glass-luna p-6 rounded-2xl group cursor-pointer" data-contact="email">
            <div class="flex items-center gap-4">
              <div class="contact-icon text-3xl group-hover:scale-110 transition-transform duration-300">üìß</div>
              <div class="flex-1">
                <div class="font-bold text-luna-800 dark:text-luna-200 mb-1">Primary Email</div>
                <a href="mailto:thanattsitt.info@yahoo.co.uk" 
                   class="text-alchemy-600 dark:text-alchemy-400 hover:text-alchemy-700 dark:hover:text-alchemy-300 transition-colors font-medium">
                  thanattsitt.info@yahoo.co.uk
                </a>
                <p class="text-xs text-luna-500 dark:text-luna-400 mt-1">
                  For collaborations, inquiries, and meaningful conversations
                </p>
              </div>
              <div class="text-luna-400 group-hover:text-luna-600 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </div>
            </div>
          </div>
          
          <!-- üåê Portfolio Website -->
          <div class="contact-card glass-alchemy p-6 rounded-2xl group cursor-pointer" data-contact="website">
            <div class="flex items-center gap-4">
              <div class="contact-icon text-3xl group-hover:scale-110 transition-transform duration-300">üåê</div>
              <div class="flex-1">
                <div class="font-bold text-alchemy-800 dark:text-alchemy-200 mb-1">Portfolio Website</div>
                <a href="https://www.pegearts.com" 
                   target="_blank" 
                   class="text-mirror-600 dark:text-mirror-400 hover:text-mirror-700 dark:hover:text-mirror-300 transition-colors font-medium">
                  pegearts.com
                </a>
                <p class="text-xs text-luna-500 dark:text-luna-400 mt-1">
                  Explore my complete creative journey and portfolio
                </p>
              </div>
              <div class="text-luna-400 group-hover:text-luna-600 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </div>
            </div>
          </div>
          
          <!-- üê¶ Social Media -->
          <div class="contact-card glass-mirror p-6 rounded-2xl group cursor-pointer" data-contact="social">
            <div class="flex items-center gap-4">
              <div class="contact-icon text-3xl group-hover:scale-110 transition-transform duration-300">üê¶</div>
              <div class="flex-1">
                <div class="font-bold text-mirror-800 dark:text-mirror-200 mb-1">Social Connect</div>
                <a href="https://x.com/ThanattsittS" 
                   target="_blank" 
                   class="text-flow-600 dark:text-flow-400 hover:text-flow-700 dark:hover:text-flow-300 transition-colors font-medium">
                  @ThanattsittS
                </a>
                <p class="text-xs text-luna-500 dark:text-luna-400 mt-1">
                  Follow my thoughts on design, psychology, and culture
                </p>
              </div>
              <div class="text-luna-400 group-hover:text-luna-600 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </div>
            </div>
          </div>

          <!-- üíº LinkedIn -->
          <div class="contact-card glass-sage p-6 rounded-2xl group cursor-pointer" data-contact="linkedin">
            <div class="flex items-center gap-4">
              <div class="contact-icon text-3xl group-hover:scale-110 transition-transform duration-300">üíº</div>
              <div class="flex-1">
                <div class="font-bold text-sage-800 dark:text-sage-200 mb-1">Professional Network</div>
                <a href="#" 
                   class="text-sage-600 dark:text-sage-400 hover:text-sage-700 dark:hover:text-sage-300 transition-colors font-medium">
                  LinkedIn Profile
                </a>
                <p class="text-xs text-luna-500 dark:text-luna-400 mt-1">
                  Professional collaborations and career opportunities
                </p>
              </div>
              <div class="text-luna-400 group-hover:text-luna-600 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
                </svg>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- üåü Enhanced Philosophy & Collaboration -->
      <div class="space-y-8" id="collaboration-info">
        <!-- üîÆ Enhanced Collaboration Archetypes -->
        <div class="glass-alchemy p-8 rounded-3xl">
          <h3 class="text-2xl font-heading font-semibold mb-6 text-alchemy-800 dark:text-alchemy-200">
            <span class="text-gradient-alchemy">Collaboration</span> Archetypes
          </h3>
          
          <div class="space-y-6">
            <div class="collaboration-item flex items-start gap-4 p-4 glass-mirror rounded-xl group cursor-pointer">
              <div class="text-2xl group-hover:scale-110 transition-transform duration-300">üé®</div>
              <div>
                <strong class="text-mirror-700 dark:text-mirror-300 block mb-1">Design & Fashion</strong>
                <p class="text-sm text-luna-600 dark:text-luna-400 leading-relaxed">
                  Sustainable fashion, AI-powered design systems, symbolic visual languages, 
                  and archetypal brand development.
                </p>
              </div>
            </div>
            
            <div class="collaboration-item flex items-start gap-4 p-4 glass-flow rounded-xl group cursor-pointer">
              <div class="text-2xl group-hover:scale-110 transition-transform duration-300">üß†</div>
              <div>
                <strong class="text-flow-700 dark:text-flow-300 block mb-1">Psychology & UX</strong>
                <p class="text-sm text-luna-600 dark:text-luna-400 leading-relaxed">
                  Jungian-inspired interfaces, archetypal user research, 
                  depth psychology in digital experiences.
                </p>
              </div>
            </div>
            
            <div class="collaboration-item flex items-start gap-4 p-4 glass-sage rounded-xl group cursor-pointer">
              <div class="text-2xl group-hover:scale-110 transition-transform duration-300">üåç</div>
              <div>
                <strong class="text-sage-700 dark:text-sage-300 block mb-1">Cultural Consulting</strong>
                <p class="text-sm text-luna-600 dark:text-luna-400 leading-relaxed">
                  Thai-Western bridge building, inclusive design practices, 
                  cross-cultural communication strategies.
                </p>
              </div>
            </div>
            
            <div class="collaboration-item flex items-start gap-4 p-4 glass-luna rounded-xl group cursor-pointer">
              <div class="text-2xl group-hover:scale-110 transition-transform duration-300">üé≠</div>
              <div>
                <strong class="text-luna-700 dark:text-luna-300 block mb-1">Voice & Character</strong>
                <p class="text-sm text-luna-600 dark:text-luna-400 leading-relaxed">
                  Voice acting, character development, narrative design, 
                  and archetypal storytelling.
                </p>
              </div>
            </div>
          </div>
        </div>
        
        <!-- üåô Enhanced Jung Quote -->
        <div class="glass-mirror p-8 rounded-3xl text-center">
          <div class="mb-6">
            <svg class="w-10 h-10 text-mirror-400 mx-auto opacity-60" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h4v10h-10z"/>
            </svg>
          </div>
          
          <blockquote class="text-lg md:text-xl font-heading italic text-luna-700 dark:text-luna-300 mb-4 leading-relaxed">
            "The meeting of two personalities is like the contact of two chemical substances: 
            if there is any reaction, both are transformed."
          </blockquote>
          
          <cite class="text-sm text-mirror-600 dark:text-mirror-400 font-semibold">
            ‚Äî Carl Jung
          </cite>
          
          <div class="mt-6 pt-6 border-t border-mirror-200 dark:border-mirror-700">
            <p class="text-sm text-luna-600 dark:text-luna-400">
              Every collaboration is an alchemical process of mutual transformation.
            </p>
          </div>
        </div>
        
        <!-- üöÄ Enhanced CTA Section -->
        <div class="text-center space-y-6">
          <div class="glass-flow p-6 rounded-2xl">
            <h4 class="text-lg font-heading font-semibold text-flow-800 dark:text-flow-200 mb-3">
              Ready to Create Together?
            </h4>
            <p class="text-sm text-luna-600 dark:text-luna-400 mb-4">
              Let's explore how our energies can combine to manifest something extraordinary.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
              <Button variant="mirror" size="lg" href="mailto:thanattsitt.info@yahoo.co.uk">
                <span class="flex items-center gap-2">
                  ‚ú® <span>Begin Our Transformation</span>
                </span>
              </Button>
              <Button variant="ghost" size="lg" href="https://www.pegearts.com" target="_blank">
                <span class="flex items-center gap-2">
                  üåê <span>View Full Portfolio</span>
                </span>
              </Button>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- üåü Availability Status -->
    <div class="mt-16 text-center" id="availability-status">
      <div class="glass-alchemy p-6 rounded-2xl max-w-2xl mx-auto">
        <div class="flex items-center justify-center gap-3 mb-4">
          <div class="w-3 h-3 bg-green-400 rounded-full animate-pulse"></div>
          <span class="font-semibold text-alchemy-700 dark:text-alchemy-300">
            Currently Available for New Projects
          </span>
        </div>
        <p class="text-sm text-luna-600 dark:text-luna-400">
          Accepting collaborations for Q1 2025 ‚Ä¢ Response time: 24-48 hours
        </p>
      </div>
    </div>
  </div>

  <!-- üé≠ Contact Method Tooltip -->
  <div id="contact-tooltip" class="fixed pointer-events-none z-50 px-4 py-3 bg-luna-900 dark:bg-luna-100 text-luna-100 dark:text-luna-900 text-sm rounded-lg shadow-xl opacity-0 transition-opacity duration-200 max-w-xs">
    <div class="tooltip-content font-medium"></div>
    <div class="tooltip-description text-xs opacity-80 mt-1"></div>
  </div>
</section>

<!-- üé≠ Enhanced GSAP Animations -->
<script>
  document.addEventListener('DOMContentLoaded', () => {
    if (typeof gsap !== 'undefined') {
      // üéØ Contact Section Animation Timeline
      const contactTl = gsap.timeline({
        scrollTrigger: {
          trigger: "#contact",
          start: "top 80%",
          end: "bottom 20%",
          toggleActions: "play none none reverse"
        }
      });

      // üìù Header Animation
      contactTl.fromTo("#contact-header", {
        y: 50,
        opacity: 0
      }, {
        y: 0,
        opacity: 1,
        duration: 1,
        ease: "power2.out"
      });

      // üìß Contact Info Animation
      contactTl.fromTo("#contact-info", {
        x: -50,
        opacity: 0
      }, {
        x: 0,
        opacity: 1,
        duration: 0.8,
        ease: "power2.out"
      }, "-=0.5");

      // üîÆ Collaboration Info Animation
      contactTl.fromTo("#collaboration-info", {
        x: 50,
        opacity: 0
      }, {
        x: 0,
        opacity: 1,
        duration: 0.8,
        ease: "power2.out"
      }, "-=0.6");

      // üìã Contact Methods Staggered Animation
      contactTl.fromTo(".contact-card", {
        y: 30,
        opacity: 0,
        scale: 0.95
      }, {
        y: 0,
        opacity: 1,
        scale: 1,
        duration: 0.6,
        stagger: 0.1,
        ease: "back.out(1.7)"
      }, "-=0.4");

      // üé® Collaboration Items Animation
      contactTl.fromTo(".collaboration-item", {
        x: 20,
        opacity: 0
      }, {
        x: 0,
        opacity: 1,
        duration: 0.5,
        stagger: 0.1,
        ease: "power2.out"
      }, "-=0.3");

      // üåü Availability Status
      contactTl.fromTo("#availability-status", {
        y: 30,
        opacity: 0
      }, {
        y: 0,
        opacity: 1,
        duration: 0.6,
        ease: "power2.out"
      }, "-=0.2");

      // üé≠ Enhanced Contact Card Interactions
      document.querySelectorAll('.contact-card').forEach(card => {
        const icon = card.querySelector('.contact-icon');
        
        card.addEventListener('mouseenter', () => {
          gsap.to(card, {
            y: -5,
            scale: 1.02,
            duration: 0.3,
            ease: "power2.out"
          });
          
          gsap.to(icon, {
            scale: 1.1,
            rotation: 5,
            duration: 0.3,
            ease: "back.out(1.7)"
          });
        });

        card.addEventListener('mouseleave', () => {
          gsap.to(card, {
            y: 0,
            scale: 1,
            duration: 0.3,
            ease: "power2.out"
          });
          
          gsap.to(icon, {
            scale: 1,
            rotation: 0,
            duration: 0.3,
            ease: "power2.out"
          });
        });
      });

      // üåü Collaboration Items Hover
      document.querySelectorAll('.collaboration-item').forEach(item => {
        item.addEventListener('mouseenter', () => {
          gsap.to(item, {
            x: 5,
            duration: 0.3,
            ease: "power2.out"
          });
        });

        item.addEventListener('mouseleave', () => {
          gsap.to(item, {
            x: 0,
            duration: 0.3,
            ease: "power2.out"
          });
        });
      });

      // üåä Floating background elements
      gsap.to(".animate-float", {
        y: -15,
        rotation: 180,
        repeat: -1,
        yoyo: true,
        duration: 6,
        ease: "sine.inOut"
      });

      gsap.to(".animate-pulse", {
        scale: 1.2,
        opacity: 0.8,
        repeat: -1,
        yoyo: true,
        duration: 2,
        ease: "sine.inOut",
        stagger: 0.5
      });
    }

    // üé≠ Contact Method Tooltips
    const contactDescriptions = {
      email: {
        title: "Primary Communication",
        description: "Best for detailed project discussions and formal inquiries."
      },
      website: {
        title: "Complete Portfolio",
        description: "Explore my full range of creative work and case studies."
      },
      social: {
        title: "Casual Connection",
        description: "Follow my thoughts on design, psychology, and cultural insights."
      },
      linkedin: {
        title: "Professional Network",
        description: "Connect for career opportunities and professional collaborations."
      }
    };

    document.querySelectorAll('.contact-card').forEach(card => {
      const tooltip = document.getElementById('contact-tooltip');
      const tooltipContent = tooltip.querySelector('.tooltip-content');
      const tooltipDescription = tooltip.querySelector('.tooltip-description');
      
      card.addEventListener('mouseenter', (e) => {
        const contactType = e.currentTarget.dataset.contact;
        const info = contactDescriptions[contactType];
        
        if (info) {
          tooltipContent.textContent = info.title;
          tooltipDescription.textContent = info.description;
          tooltip.style.opacity = '1';
        }
      });

      card.addEventListener('mouseleave', () => {
        tooltip.style.opacity = '0';
      });

      card.addEventListener('mousemove', (e) => {
        tooltip.style.left = e.clientX + 15 + 'px';
        tooltip.style.top = e.clientY - 60 + 'px';
      });
    });
  });
</script>

<style>
  /* üé® Enhanced Contact Section Styles */
  .contact-card {
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .contact-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
    transition: left 0.6s ease;
    z-index: 1;
  }

  .contact-card:hover::before {
    left: 100%;
  }

  .collaboration-item {
    transition: all 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.05);
  }

  .collaboration-item:hover {
    border-color: rgba(255, 255, 255, 0.1);
  }

  /* üåü Floating animations */
  @keyframes float {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    50% { transform: translateY(-15px) rotate(180deg); }
  }

  .animate-float {
    animation: float 6s ease-in-out infinite;
  }

  /* üì± Responsive optimizations */
  @media (max-width: 768px) {
    .contact-card {
      padding: 1rem;
    }
    
    .collaboration-item {
      padding: 0.75rem;
    }
  }

  /* ‚ôø Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .contact-card,
    .collaboration-item,
    .animate-float,
    .animate-pulse {
      animation: none !important;
      transition: none !important;
    }
  }

  /* üåô Dark mode enhancements */
  @media (prefers-color-scheme: dark) {
    .contact-card {
      border-color: rgba(255, 255, 255, 0.05);
    }
    
    .contact-card::before {
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.05), transparent);
    }
  }
</style>
