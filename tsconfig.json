{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    // ğŸ¯ Basic Configuration
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    
    // ğŸ”§ Module System
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    
    // âš›ï¸ JSX Configuration for React
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "jsxFactory": "React.createElement",
    "jsxFragmentFactory": "React.Fragment",
    
    // ğŸ¯ Type Checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    
    // ğŸ” Additional Checks
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    
    // ğŸ“ Path Resolution
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@components/*": ["./src/components/*"],
      "@layouts/*": ["./src/layouts/*"],
      "@pages/*": ["./src/pages/*"],
      "@styles/*": ["./src/styles/*"],
      "@assets/*": ["./src/assets/*"],
      "@data/*": ["./src/data/*"],
      "@utils/*": ["./src/scripts/*"],
      "@types/*": ["./src/types/*"],
      "@ui/*": ["./src/components/ui/*"],
      "@sections/*": ["./src/components/sections/*"],
      "@interactive/*": ["./src/components/interactive/*"],
      "@jungian/*": ["./src/components/jungian/*"],
      "@cultural/*": ["./src/components/cultural/*"],
      "@forms/*": ["./src/components/forms/*"],
      "@portfolio/*": ["./src/components/portfolio/*"]
    },
    
    // ğŸš€ Output Configuration
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "sourceMap": true,
    "declaration": false,
    "declarationMap": false,
    
    // ğŸ”§ Advanced Options
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "noEmit": true,
    
    // ğŸ¨ Experimental Features
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    // ğŸ“Š Type Acquisition
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": [
      "node",
      "astro/client",
      "vite/client"
    ]
  },
  
  // ğŸ“ Include Patterns
  "include": [
    "src/**/*",
    "src/**/*.astro",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "src/**/*.jsx",
    "src/**/*.vue",
    "src/**/*.svelte",
    "src/**/*.md",
    "src/**/*.mdx",
    "astro.config.mjs",
    "tailwind.config.mjs",
    "vite.config.ts",
    ".astro/types.d.ts"
  ],
  
  // ğŸš« Exclude Patterns
  "exclude": [
    "node_modules",
    "dist",
    "build",
    ".astro",
    ".vercel",
    ".netlify",
    "public",
    "coverage",
    "cypress",
    "playwright",
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "**/*.stories.ts",
    "**/*.stories.tsx"
  ],
  
  // ğŸ¯ TypeScript-specific Astro configuration
  "astro": {
    "allowJs": true
  },
  
  // ğŸ”§ Compiler Options for Development
  "ts-node": {
    "esm": true,
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "bundler"
    }
  }
}
